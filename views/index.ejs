        <!-- radio checks -->
        <div class="form-group">
          <label class="col-md-4 control-label">Need the exam room?</label>
          <div class="col-md-4">
            <div class="radio">
              <label>
                <input id="exam_room_yes" type="radio" name="exam_room" value="yes" /> Yes
