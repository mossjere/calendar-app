          </div>
        </div>

        <!-- Text input-->
        <div class="form-group" id="form_address_div">
          <br>
          <label class="col-md-4 control-label">Address</label>
          <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
              <textarea id="address_of_location" name="address" placeholder="Address" class="form-control" type="text" rows="3"
                cols="21"></textarea>
            </div>
          </div>
        </div>

        <br>

        <script>
          document.getElementById("farm_call_yes").onchange = function () {
            if (this.checked)
              document.getElementById("form_address_div").style.display = "block";
          };

          document.getElementById("farm_call_no").onchange = function () {
            if (this.checked)
              document.getElementById("form_address_div").style.display = "none";
          }

          document.getElementById('start_time').onchange = function () {
            if (!document.getElementById('end_time').value) {
              if (currentTab == 1) {
                const dt = new Date(this.value);
                dt.setMinutes(dt.getMinutes() - dt.getTimezoneOffset() + 30);
                document.getElementById('end_time').value = dt.toISOString().slice(0, 16);
              }
              else {
                const dt = new Date(this.value);
                dt.setMinutes(dt.getMinutes() - dt.getTimezoneOffset());
                dt.setHours(dt.getHours() + 1);
                document.getElementById('end_time').value = dt.toISOString().slice(0, 16);
              }
            }
          };
        </script>


